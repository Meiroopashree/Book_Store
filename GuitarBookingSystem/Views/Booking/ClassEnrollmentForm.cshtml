@model GuitarBookingSystem.Models.Class

<h2>Class Enrollment Form</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<div>
    <p><strong>Class ID:</strong> @Model.ClassID</p>
    <p><strong>Start Time:</strong> @Model.StartTime</p>
    <p><strong>End Time:</strong> @Model.EndTime</p>
    <p><strong>Capacity:</strong> @Model.Capacity</p>
</div>

<form method="post" asp-action="ClassEnrollmentForm">
    <input type="hidden" asp-for="ClassID" />
    <div class="form-group">
        <label for="studentName">Your Name:</label>
        <input type="text" id="studentName" name="student.Name" class="form-control"  />
        @* <span asp-validation-for="Name" class="text-danger"></span> *@
    </div>
    <div class="form-group">
        <label for="studentEmail">Your Email:</label>
        <input type="email" id="studentEmail" name="student.Email" class="form-control"  />
        @* <span asp-validation-for="Email" class="text-danger"></span> *@
    </div>
    <button type="submit" class="btn btn-primary">Enroll</button>
</form>
