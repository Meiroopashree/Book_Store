@model GuitarBookingSystem.Models.Class

<h2>Delete Class</h2>

<div>
    <p>Are you sure you want to delete this class?</p>
    <dl class="row">
        <dt class="col-sm-2">Class ID:</dt>
        <dd class="col-sm-10">@Model.ClassID</dd>
        <dt class="col-sm-2">Start Time</dt>
        <dd class="col-sm-10">@Model.StartTime</dd>
        <dt class="col-sm-2">End Time</dt>
        <dd class="col-sm-10">@Model.EndTime</dd>
        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>
        <!-- Include other class details as needed -->
    </dl>
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ClassID" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="AvailableClasses" class="btn btn-secondary">Cancel</a>
    </form>
</div>
