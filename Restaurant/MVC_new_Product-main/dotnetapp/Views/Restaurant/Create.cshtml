@model dotnetapp.Models.Restaurant

<h2>Create Restaurant</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location">Location:</label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CuisineType">Cuisine Type:</label>
        <input asp-for="CuisineType" class="form-control" />
        <span asp-validation-for="CuisineType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OpeningTime">Opening Time:</label>
        <input asp-for="OpeningTime" type="time" class="form-control" />
        <span asp-validation-for="OpeningTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClosingTime">Closing Time:</label>
        <input asp-for="ClosingTime" type="time" class="form-control" />
        <span asp-validation-for="ClosingTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
