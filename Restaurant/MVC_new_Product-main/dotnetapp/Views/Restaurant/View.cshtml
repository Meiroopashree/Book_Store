@model List<dotnetapp.Models.Restaurant>

@{
    ViewBag.Title = "Restaurant Dashboard";
}

<h2>Restaurant Dashboard</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Description</th>
            <th>Cuisine Type</th>
            <th>Opening Time</th>
            <th>Closing Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var restaurant in Model)
        {
            <tr>
                <td>@restaurant.Name</td>
                <td>@restaurant.Location</td>
                <td>@restaurant.Description</td>
                <td>@restaurant.CuisineType</td>
                <td>@restaurant.OpeningTime</td>
                <td>@restaurant.ClosingTime</td>
            </tr>
        }
    </tbody>
</table>
