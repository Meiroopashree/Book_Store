@model List<dotnetapp.Models.Book>
@{
    int totalCount = ViewBag.TotalCount != null ? (int)ViewBag.TotalCount : 0;
}

<h2>Books</h2>
<form method="get" action="@Url.Action("Search", "Book")">
    <input type="text" name="searchString" placeholder="Search by title...">
    <button class="button" type="submit">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Price</td>
                <td>@book.Quantity</td>
            </tr>
        }
    </tbody>
</table>

<p>Total number of books: @totalCount</p>

